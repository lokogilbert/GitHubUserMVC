@model GitHubUserMVC.Models.GitHubDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="row">
        <div col="col-sm-2">
            <h1>Profile</h1>
        </div>
    </div>
    <div>
        <div class="row">
            <div col="col-sm-2">
                <img style="height:auto;" alt="" width="310" height="310" class="avatar avatar-user"
                     src="@Url.Content(Model.UserViewModel.avatar_url)">
            </div>
        </div>
        <div class="row">
            <div col="col-sm-2">
                <span class="p-nickname vcard-username d-block" itemprop="additionalName">
                    @Model.UserViewModel.login
                </span>
            </div>
        </div>


        <div id="profileDetail">
            <div class="row">
                <div class="col-md-3">
                    <hr />
                </div>
            </div>

            <div class="row">
                <form>
                    <div class="mb-2">
                        @Html.LabelFor(model => model.UserViewModel.name, new { @class="form-label"})
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.UserViewModel.name, new {disabled= "disabled", @class = "form-control2" })
                        </div>
                    </div>
                    <div class="mb-2">
                        @Html.LabelFor(model => model.UserViewModel.bio, new { @class="form-label"})
                        <div class="col-md-3">
                            @Html.TextAreaFor(model => model.UserViewModel.bio, 4, 30, new {disabled= "disabled" , @class = "form-control2", @id="bio" })
                        </div>
                    </div>
                    <div class="mb-2">
                        @Html.LabelFor(model => model.UserViewModel.company, new { @class="form-label"})
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.UserViewModel.company, new {disabled= "disabled", @class = "form-control2", @id="company" })
                        </div>
                    </div>
                    <div class="mb-2">
                        @Html.LabelFor(model => model.UserViewModel.location, new { @class="form-label"})
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.UserViewModel.location, new {disabled= "disabled", @class = "form-control2", @id="location" })
                        </div>
                    </div>
                    <div class="mb-2">
                        @Html.LabelFor(model => model.UserViewModel.email, new { @class="form-label"})
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.UserViewModel.email, new {disabled= "disabled", @class = "form-control2" })
                        </div>
                    </div>
                    <div class="mb-2">
                        @Html.LabelFor(model => model.UserViewModel.hireable, new { @class="form-label"})
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.UserViewModel.hireable, new {disabled= "disabled", @class = "form-control2" })
                        </div>
                    </div>
                    <div class="mb-2">
                        @Html.LabelFor(model => model.UserViewModel.twitter_username, new { @class="form-label"})
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.UserViewModel.twitter_username, new {disabled= "disabled" , @class = "form-control2"})
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="col-md-3 alert-message">
                            <span>*** You should update the highlighted fields in your github profile: </span>
                            <a href="@Url.Content(Model.UserViewModel.html_url)">@Model.UserViewModel.html_url</a>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
    <br />
    <br />
    <div class="row">

        <div class="col-sm-3">
            <input type="button"
                   name="button"
                   id="buttonProfileDetail"
                   value="Show Details"
                   tabindex="3"
                   class="btn btn-block" />
        </div>

    </div>
    <br />

    <div class="row">
        <div class="col-sm-3">
            <svg text="muted" aria-hidden="true" height="16" viewBox="0 0 16 16" version="1.1" width="16" data-view-component="true" class="octicon octicon-people">
                <path fill-rule="evenodd" d="M5.5 3.5a2 2 0 100 4 2 2 0 000-4zM2 5.5a3.5 3.5 0 115.898 2.549 5.507 5.507 0 013.034 4.084.75.75 0 11-1.482.235 4.001 4.001 0 00-7.9 0 .75.75 0 01-1.482-.236A5.507 5.507 0 013.102 8.05 3.49 3.49 0 012 5.5zM11 4a.75.75 0 100 1.5 1.5 1.5 0 01.666 2.844.75.75 0 00-.416.672v.352a.75.75 0 00.574.73c1.2.289 2.162 1.2 2.522 2.372a.75.75 0 101.434-.44 5.01 5.01 0 00-2.56-3.012A3 3 0 0011 4z"></path>
            </svg>
            @Html.HiddenFor(model => model.UserViewModel.following, new { Value = @Model.UserViewModel.following })
            <span class="text-bold color-fg-default">@Model.UserViewModel.following</span> Following
            <span>·     </span>
            @Html.HiddenFor(model => model.UserViewModel.public_repos, new { Value = @Model.UserViewModel.public_repos })
            <span class="text-bold color-fg-default">@Model.UserViewModel.public_repos</span> Public Repos
        </div>

    </div>
    <br />
    <br />
