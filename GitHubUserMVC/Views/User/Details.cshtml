</div>


<script>

    $(document).ready(function () {

        $("#profileDetail").hide();
        $("#divDev").hide();
        $("#divRepo").hide();

        $("#buttonProfileDetail").click(function () {
            var isVisible = $('#profileDetail').is(':visible');
            isVisible == true ? $("#profileDetail").hide() : $("#profileDetail").show()
            isVisible == true ? $("#buttonProfileDetail").val("Show Details") : $("#buttonProfileDetail").val("Hide Details")
        });

        if ($("#bio").val() == '') {
            $("#bio").addClass("focused");
            $(".alert-message").show();
        }
        if ($("#company").val() == '') {
            $("#company").addClass("focused");
            $(".alert-message").show();
        }
        if ($("#location").val() == '') {
            $("#location").addClass("focused");
            $(".alert-message").show();
        }

        if ($("#UserViewModel_following").val() < 5){
            $("#divDev").show();
        }
        if ($("#UserViewModel_public_repos").val() < 5) {
            $("#divRepo").show();
        }

    })

</script>